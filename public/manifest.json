  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.pharmapos.mobile",
      "id": "com.pharmapos.mobile"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/pharmapos/id123456789",
      "id": "123456789"
    }
  ],
  "scope_extensions": [
    {
      "origin": "*.pharmapos.com"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      },
      "icons": [
        {
          "src": "/icons/import-icon.svg",
          "sizes": "96x96"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*", ".pdf"]
        }
      ]
    }
  },
  "widgets": [
    {
      "name": "Quick Sale",
      "short_name": "Quick Sale",
      "description": "Quick sale widget for home screen",
      "tag": "quick-sale",
      "ms_ac_template": "MSAC_TEMPLATE_QUICK_SALE",
      "templates": {
        "widget-template": {
          "ms_ac_template": "MSAC_TEMPLATE_QUICK_SALE",
          "data": {}
        }
      },
      "creatable": true,
      "multiple": false
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  }
